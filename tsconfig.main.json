{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src/main",
    "outDir": "dist/main",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/shared/src/*"],
      "@maplume/shared": ["packages/shared/src"],
      "@maplume/shared/*": ["packages/shared/src/*"]
    }
  },
  "include": ["src/main/**/*"]
}
